<!DOCTYPE html>
<html lang="en">
<head>
 
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <a href="/" class="btn btn-md btn-secondary" style="margin:5px;">Home Page</a>
   
    <a href="/add" class="btn btn-md btn-secondary  " style="margin-left:auto;">Previous Transfers</a>
  </nav>
  <div class="container" style="margin-top: 8px;">
    <h3 style="text-align: center;"><%= title %></h3>
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th>Id</th>
          <th>Sender</th>
          <th>Receiver</th>
          <th>Credits Transferred</th>
         
        </tr>
      </thead>
      <tbody>
        <% transfers.forEach(function(transact){ %>
            <tr>
                <td><%= transact.id %></td>
                <td><%= transact.sender %></td>
                <td><%= transact.receiver %></td>
                <td><%= transact.amount %></td> 
            </tr>
        <% }); %>
      </tbody>  
    </table>
  </div>
 
</body>
</html>